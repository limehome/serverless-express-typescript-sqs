    "@types/express": "^4.17.9",
    "@types/js-yaml": "^3.12.5",
    "@types/supertest": "^2.0.10",
    "@types/swagger-ui-express": "^4.1.2",
    "aws-lambda": "^1.0.6",
    "aws-sdk": "^2.820.0",
    "aws-serverless-express": "^3.4.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-validator": "^6.9.0",
