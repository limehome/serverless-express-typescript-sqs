    "test:watch": "npm run test -- --watch",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"*.{yaml,yml,json,js}\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\" \"*.{yaml,yml,json,js}\"",
    "serverless": "serverless"
  },
  "dependencies": {
    "@types/aws-lambda": "^8.10.68",
